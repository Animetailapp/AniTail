<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.90"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_placeholder"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_backdrop_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#68112433"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:shadowColor="#CC000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="4"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:shadowColor="#AA000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:text=""
            android:textColor="#DAFFFFFF"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/widget_prev_slot"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginEnd="10dp">

                <ImageView
                    android:id="@+id/widget_prev_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_control_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_prev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/skip_previous"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="52dp"
                android:layout_height="52dp">

                <ImageView
                    android:id="@+id/widget_play_progress_ring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <FrameLayout
                    android:id="@+id/widget_play_slot"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:id="@+id/widget_play_pause_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/widget_play_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_play_pause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/play"
                        tools:ignore="ContentDescription" />
                </FrameLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_next_slot"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginStart="10dp">

                <ImageView
                    android:id="@+id/widget_next_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_control_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:src="@drawable/skip_next"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_quick_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/widget_action_slot_lyrics"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:id="@+id/widget_action_lyrics_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:src="@drawable/lyrics"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_action_slot_queue"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp">

                <ImageView
                    android:id="@+id/widget_action_queue_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_queue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:src="@drawable/queue_music"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_action_slot_search"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:layout_marginEnd="6dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/widget_action_search_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="6dp"
                    android:src="@drawable/search"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/widget_progress"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="6dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_song_progress_track"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_progress_track"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_song_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_progress_fill"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_cover_container"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_cover_ring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_cover_bg"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_cover_mask"
                android:clipToOutline="true"
                android:src="@drawable/ic_music_placeholder"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
