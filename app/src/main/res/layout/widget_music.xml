<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.62"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_placeholder"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_backdrop_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8E102030"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="14dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp">

            <FrameLayout
                android:id="@+id/widget_cover_container"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/widget_cover_ring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_cover_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="6dp"
                    android:background="@drawable/widget_cover_mask"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_placeholder"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/widget_info_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/widget_cover_container"
                android:layout_alignBottom="@id/widget_cover_container"
                android:layout_marginEnd="14dp"
                android:layout_toStartOf="@id/widget_cover_container"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#9C000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#90000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text=""
                    android:textColor="#DDFFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <FrameLayout
                android:id="@+id/widget_play_slot"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/widget_play_pause_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_play_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_play_pause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="13dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/widget_quick_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/widget_action_slot_lyrics"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/widget_action_lyrics_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_quick_action_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_action_lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/lyrics"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lyrics" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_action_slot_queue"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <ImageView
                        android:id="@+id/widget_action_queue_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_quick_action_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_action_queue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/queue"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/queue_music" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_action_slot_search"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/widget_action_search_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_quick_action_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_action_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/search"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/search" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_skip_cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/widget_prev_slot"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginEnd="10dp">

                    <ImageView
                        android:id="@+id/widget_prev_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_control_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_prev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skip_previous"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_next_slot"
                    android:layout_width="42dp"
                    android:layout_height="42dp">

                    <ImageView
                        android:id="@+id/widget_next_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_control_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skip_next"
                        tools:ignore="ContentDescription" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/widget_progress"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_song_progress_track"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_progress_track"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_song_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/widget_progress_fill"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/widget_recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/widget_recommendation_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget_recommendation_cover_1"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_recommendation_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_placeholder" />

                <TextView
                    android:id="@+id/widget_recommendation_title_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#F0FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_recommendation_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget_recommendation_cover_2"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_recommendation_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_placeholder" />

                <TextView
                    android:id="@+id/widget_recommendation_title_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#F0FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_recommendation_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget_recommendation_cover_3"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_recommendation_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_placeholder" />

                <TextView
                    android:id="@+id/widget_recommendation_title_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#F0FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_recommendation_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/widget_recommendation_cover_4"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/widget_recommendation_background"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_placeholder" />

                <TextView
                    android:id="@+id/widget_recommendation_title_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text=""
                    android:textColor="#F0FFFFFF"
                    android:textSize="9sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
