<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.88"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_placeholder"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_backdrop_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66102030"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingTop="12dp"
        android:paddingEnd="16dp"
        android:paddingBottom="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <FrameLayout
                android:id="@+id/widget_cover_container"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/widget_cover_ring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_cover_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_cover_progress_ring"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_cover"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:background="@drawable/widget_cover_mask"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_music_placeholder"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/widget_info_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/widget_cover_container"
                android:layout_alignBottom="@id/widget_cover_container"
                android:layout_marginEnd="16dp"
                android:layout_toStartOf="@id/widget_cover_container"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#CC000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="4"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#AA000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:text=""
                    android:textColor="#DDFFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="54dp">

            <FrameLayout
                android:id="@+id/widget_play_slot"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true">

                <ImageView
                    android:id="@+id/widget_play_pause_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_play_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_play_pause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <LinearLayout
                android:id="@+id/widget_quick_actions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/widget_action_slot_lyrics"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/widget_action_lyrics_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_quick_action_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_action_lyrics"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/lyrics"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/lyrics" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_action_slot_queue"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/widget_action_queue_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_quick_action_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_action_queue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/queue"
                        android:padding="6dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/queue_music" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_action_slot_search"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/widget_action_search_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_quick_action_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_action_search"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/search"
                        android:padding="7dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/search" />
                </FrameLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_skip_cluster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/widget_prev_slot"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/widget_prev_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_control_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_prev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skip_previous"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_next_slot"
                    android:layout_width="40dp"
                    android:layout_height="40dp">

                    <ImageView
                        android:id="@+id/widget_next_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_control_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skip_next"
                        tools:ignore="ContentDescription" />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/widget_progress"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_song_progress_track"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_progress_track"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_song_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/widget_progress_fill"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
