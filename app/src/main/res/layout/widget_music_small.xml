<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:clipToOutline="true"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.88"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_placeholder"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_backdrop_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#62102030"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="14dp"
        android:paddingTop="11dp"
        android:paddingEnd="14dp"
        android:paddingBottom="9dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="62dp">

            <LinearLayout
                android:id="@+id/widget_info_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/widget_controls_row"
                android:layout_marginEnd="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#CC000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="4"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#AA000000"
                    android:shadowDx="0"
                    android:shadowDy="1"
                    android:shadowRadius="3"
                    android:text=""
                    android:textColor="#DAFFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/widget_controls_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/widget_prev_slot"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/widget_prev_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_control_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_prev"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skip_previous"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_play_slot"
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:layout_marginEnd="8dp">

                    <ImageView
                        android:id="@+id/widget_play_pause_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_play_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_play_pause"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/play"
                        tools:ignore="ContentDescription" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/widget_next_slot"
                    android:layout_width="38dp"
                    android:layout_height="38dp">

                    <ImageView
                        android:id="@+id/widget_next_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/widget_control_button_bg"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/widget_next"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="9dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/skip_next"
                        tools:ignore="ContentDescription" />
                </FrameLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/widget_progress"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="1dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/widget_controls_row">

                <ImageView
                    android:id="@+id/widget_song_progress_track"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_progress_track"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_song_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_progress_fill"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/widget_quick_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:id="@+id/widget_action_slot_lyrics"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/widget_action_lyrics_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/lyrics"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_action_slot_queue"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/widget_action_queue_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_queue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/queue_music"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_action_slot_search"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/widget_action_search_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/search"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/widget_cover_container"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_cover_ring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_cover_bg"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_cover_mask"
                android:clipToOutline="true"
                android:src="@drawable/ic_music_placeholder"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
