<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.55"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_placeholder"
        tools:ignore="ContentDescription" />

    <View
        android:id="@+id/widget_backdrop_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7A13283A" />

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/widget_cover"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_alignParentEnd="true"
                android:background="@drawable/widget_cover_bg"
                android:clipToOutline="true"
                android:padding="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_music_placeholder"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:id="@+id/widget_info_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/widget_cover"
                android:layout_alignBottom="@id/widget_cover"
                android:layout_toStartOf="@id/widget_cover"
                android:layout_marginEnd="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#99000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/widget_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:shadowColor="#99000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#D9FFFFFF"
                    android:textSize="11sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/widget_controls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/widget_prev"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/widget_control_button_bg"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/skip_previous"
                android:tint="#FFFFFF"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/widget_play_pause"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/widget_play_button_bg"
                android:padding="11dp"
                android:scaleType="fitCenter"
                android:src="@drawable/play"
                android:tint="#0E1624"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:id="@+id/widget_next"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:background="@drawable/widget_control_button_bg"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/skip_next"
                android:tint="#FFFFFF"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_quick_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/widget_action_lyrics"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/widget_quick_action_bg"
                android:contentDescription="@string/lyrics"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lyrics"
                android:tint="#E6FFFFFF" />

            <ImageButton
                android:id="@+id/widget_action_queue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/widget_quick_action_bg"
                android:contentDescription="@string/queue"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/queue_music"
                android:tint="#E6FFFFFF" />

            <ImageButton
                android:id="@+id/widget_action_search"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginHorizontal="5dp"
                android:background="@drawable/widget_quick_action_bg"
                android:contentDescription="@string/search"
                android:padding="7dp"
                android:scaleType="fitCenter"
                android:src="@drawable/search"
                android:tint="#E6FFFFFF" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/widget_song_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/miniplayer_progress"
                android:secondaryProgress="0" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
