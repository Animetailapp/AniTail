<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widget_background"
    android:padding="0dp">

    <ImageView
        android:id="@+id/widget_backdrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_music_placeholder"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_backdrop_tint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8613283A"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:id="@+id/widget_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="12dp"
        android:paddingTop="12dp"
        android:paddingEnd="12dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:shadowColor="#94000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/widget_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:shadowColor="#90000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text=""
            android:textColor="#D9FFFFFF"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/widget_prev_slot"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="8dp">

                <ImageView
                    android:id="@+id/widget_prev_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_control_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_prev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skip_previous"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_play_slot"
                android:layout_width="50dp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/widget_play_pause_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_play_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_play_pause"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="11dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play"
                    tools:ignore="ContentDescription" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_next_slot"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginStart="8dp">

                <ImageView
                    android:id="@+id/widget_next_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_control_button_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="9dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/skip_next"
                    tools:ignore="ContentDescription" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/widget_quick_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/widget_action_slot_lyrics"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:id="@+id/widget_action_lyrics_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_lyrics"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/lyrics"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/lyrics" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_action_slot_queue"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:id="@+id/widget_action_queue_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_queue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/queue"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/queue_music" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/widget_action_slot_search"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <ImageView
                    android:id="@+id/widget_action_search_bg"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/widget_quick_action_bg"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/widget_action_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/search"
                    android:padding="6dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/search" />
            </FrameLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/widget_progress"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_song_progress_track"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_progress_track"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_song_progress"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/widget_progress_fill"
                tools:ignore="ContentDescription" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/widget_cover_container"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/widget_cover_ring"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/widget_cover_bg"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/widget_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/widget_cover_mask"
                android:clipToOutline="true"
                android:src="@drawable/ic_music_placeholder"
                tools:ignore="ContentDescription" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
