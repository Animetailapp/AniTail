<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:gravity="center"
        android:width="184dp"
        android:height="184dp">
        <shape android:shape="oval">
            <solid android:color="#32000000" />
        </shape>
    </item>

    <item
        android:gravity="center"
        android:width="176dp"
        android:height="176dp">
        <bitmap
            android:gravity="fill"
            android:src="@drawable/ic_anitail" />
    </item>

    <item
        android:gravity="center"
        android:width="176dp"
        android:height="176dp">
        <shape android:shape="oval">
            <gradient
                android:angle="270"
                android:startColor="#36FFFFFF"
                android:endColor="#10000000" />
        </shape>
    </item>

    <item
        android:gravity="center|bottom"
        android:width="142dp"
        android:height="46dp"
        android:bottom="34dp">
        <shape android:shape="oval">
            <gradient
                android:angle="0"
                android:startColor="#00FFFFFF"
                android:centerColor="#24D5EEFA"
                android:endColor="#00FFFFFF" />
        </shape>
    </item>

    <item
        android:gravity="end|top"
        android:width="52dp"
        android:height="52dp"
        android:right="10dp"
        android:top="14dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="#BFE8F2F7" />
        </shape>
    </item>

    <item
        android:gravity="start|top"
        android:width="52dp"
        android:height="52dp"
        android:left="10dp"
        android:top="14dp">
        <shape android:shape="rectangle">
            <corners android:radius="26dp" />
            <solid android:color="#BFE8F2F7" />
        </shape>
    </item>

    <item
        android:gravity="start|bottom"
        android:width="52dp"
        android:height="52dp"
        android:left="10dp"
        android:bottom="14dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <solid android:color="#BFE8F2F7" />
        </shape>
    </item>

    <item
        android:gravity="end|top"
        android:top="29dp"
        android:right="25dp"
        android:width="22dp"
        android:height="22dp"
        android:drawable="@drawable/skip_next"
        android:tint="#778A98" />

    <item
        android:gravity="start|top"
        android:left="25dp"
        android:top="29dp"
        android:width="22dp"
        android:height="22dp"
        android:drawable="@drawable/skip_previous"
        android:tint="#778A98" />

    <item
        android:gravity="start|bottom"
        android:left="25dp"
        android:bottom="29dp"
        android:width="22dp"
        android:height="22dp"
        android:drawable="@drawable/pause"
        android:tint="#778A98" />
</layer-list>
